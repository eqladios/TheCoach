<h1>Slides</h1>

<table>
  <thead>
    <tr>
      <th>Htmlbody</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.htmlBody %></td>
        <td><%= slide.topic %></td>
        <td><%= link_to 'Show', topic_slide_path %></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_topic_slide_path(topic,slide) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', topic_slide_path(topic,slide), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slide', new_topic_slide_path %>
