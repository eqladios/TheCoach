<h1>Slides</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>HTML Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.number %></td>
        <td><%= slide.htmlBody %></td>
        <td><%= link_to 'Show', chapter_topic_slide_path(slide.topic.chapter, slide.topic, slide), :class => "btn btn-info"%></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_topic_slide_path(slide.topic,slide), :class => "btn btn-warning" %></button></td>
          <td><%= link_to 'Destroy', topic_slide_path(slide.topic,slide), method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-danger" %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
  <%= link_to 'New Slide', new_topic_slide_path, :class => "btn btn-primary" %>
<% end %>
