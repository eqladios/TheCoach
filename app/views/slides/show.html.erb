<p id="notice"><%= notice %></p>
<h2> <%= @slide.topic.title %> </h2>
<div class="jumbotron">
  <%= render :inline => @slide.htmlBody %>
</div>
<div class="container">
  <div class="row" style="text-align: center;">
    <div class="col" style="display: inline-block; margin-right:40px">
      <% if !@slide.previous.nil? %>
        <%= link_to 'Previous', chapter_topic_slide_path(@slide.topic.chapter, @slide.topic, @slide.previous),  class: "btn btn-info" %>
      <% end %>
    </div>
    <div class="col" style="display: inline-block; margin-right:40px">
      <h2><%= @slide.number %> / <%= @slide.topic.slides.size %> </h2>
    </div>
    <div class="col" style="display: inline-block; margin-right:40px">
      <% if !@slide.next.nil? %>
        <%= link_to 'Next', chapter_topic_slide_path(@slide.topic.chapter, @slide.topic, @slide.next) ,  class: "btn btn-info"%>
      <% else %>
        <%= link_to 'Finish', chapters_path,  class: "btn btn-info"%>
      <%end%>
    </div>
  </div>
</div>
