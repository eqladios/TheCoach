<title>All users</title>

<h1>All users</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <div class="border-form-div">
        <h2><%= link_to user.email, user_show_path(user.id) %></h2>
        <%= link_to 'Show', user_show_path(user.id), :class => "btn btn-primary"  %>
        <%= link_to 'Destroy', user_destroy_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      </div>
    </li>
  <% end %>
</ul>
