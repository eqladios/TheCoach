<h1>Sections</h1>
  <% @sections.each do |section| %>
  <div class="center jumbotron">
      <!-- <%  imagePath = "sections/" + section.name + ".png" %>
      <%= image_tag(imagePath, :alt => "section image") %> -->
      <div class="panel panel-default">
  <!-- Default panel contents -->
        <div class="panel-heading"><%= section.name %></div>
          <table class="table">
          <thead>
            <tr>
              <th style="text-align: center;">#</th>
              <th style="text-align: center;">Name</th>
            </tr>
          </thead>
          <tbody>
            <% section.problems.each do |problem| %>
            <tr>
            <td><%= problem.id %></td>
            <td><%= link_to problem.name, section_problem_path(section, problem) %></td>
              <% if current_user.admin? %>
              <td>
              <div class="btn-group" role="group">
                <%= link_to 'Edit', edit_section_problem_path(section, problem), :class => "btn btn-warning"%>
                <%= link_to 'Destroy', section_problem_path(section, problem), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
              </div></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
         </table>
     </div>
     <% if current_user.admin? %>
     <div class="btn-group" role="group">
       <%= link_to 'Add Problem', new_section_problem_path(section), :class => "btn btn-success" %>
       <%= link_to 'Show Section', section, :class => "btn btn-info" %>
       <%= link_to 'Edit Section', edit_section_path(section), :class => "btn btn-warning" %>
       <%= link_to 'Destroy Section', section, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
     </div><br><br>
     <% end %>
    </div>

  <% end %>
<br>
<% if current_user.admin? %>
  <%= link_to 'New Section', new_section_path, :class => "btn btn-success", :style => "float: right;"%>
<% end %>
