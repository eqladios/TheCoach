<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.name %></td>
        <td><%= problem.content %></td>
        <td><%= problem.section.name %></td>
        <td><%= link_to 'Show', section_problem_path(problem.section.id,problem.id),:class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_section_problem_path(problem.section,problem),:class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', section_problem_path(problem.section,problem), method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_section_problem_path, :class => "btn btn-success" %>
